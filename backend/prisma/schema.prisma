// prisma/schema.prisma

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // Agora a URL vem de uma vari√°vel de ambiente
}

generator client {
  provider = "prisma-client-js"
}

model Gasto {
  id          Int      @id @default(autoincrement())
  data        DateTime
  descricao   String
  categoria   String
  custoTotal  Float
  moeda       String
  suaParte    Float
  parteParceiro Float
  criadoEm    DateTime @default(now())
  atualizadoEm DateTime @updatedAt
}